{
  "name": "pinnacle-auto-finance-portal",
  "version": "2.0.0",
  "description": "Pinnacle Auto Finance - Secure Dealer Portal with GoHighLevel Integration",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development LOG_LEVEL=debug nodemon server.js",
    "test": "node test-authentication.js",
    "test:auth": "node test-authentication.js",
    "setup": "node scripts/setup.js",
    "migrate-data": "node scripts/migrate-data.js",
    "cleanup": "node scripts/cleanup.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:security": "tail -f logs/security.log",
    "health": "curl -s http://localhost:3000/api/health | jq .",
    "postinstall": "npm run setup"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0-alpha.6",
    "mysql2": "^3.9.7",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.13",
    "puppeteer": "^22.10.0",
    "redis": "^4.6.13",
    "uuid": "^11.1.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pinnacle-auto-finance/dealer-portal.git"
  },
  "keywords": [
    "auto-finance",
    "dealer-portal", 
    "credit-applications",
    "dealertrack",
    "gohighlevel",
    "nodejs",
    "express"
  ],
  "author": "Pinnacle Auto Finance",
  "license": "PROPRIETARY",
  "private": true,
  "nodemonConfig": {
    "ignore": [
      "data/*",
      "logs/*",
      "uploads/*"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "services/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
